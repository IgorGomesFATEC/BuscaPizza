@using BuscaPizza.Models;
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/LayoutPage.cshtml";
    Cliente cliente = (Cliente)Session["cliente"];
}
<header>
    <nav class="navbar navbar-expand-md barra">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/BuscaPizza/Home">
                        <img src="~/img/Home.png" class="botao">
                    </a>
                </li>
            </ul>
        </div>
        <div class="mx-auto order-0">
            <p class="navbar-brand mx-auto titulo">Busca Pizza</p>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/Carrinho/Carrinho">
                        <img src="~/img/Carrinho.png" class="botaoesquerda">
                    </a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-dark btn-sm" href="/Cliente/MinhaConta/@cliente.id">Minha Conta</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<br>
<div class="container-fluid">
    <div class="row">
        <!-- TODO foreach cardapio -->
        @foreach (var p in ViewBag.piz)
        {
            <!-- Exemplos cardápios -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <div class="row">
                                <div class="col-md-6">
                                    <!--TODO colocar campo para inserir imagem na tabela da pizzaria e colocar no back tbm-->
                                    <img src="~/img/Exemplo.png" class="imgcard">
                                </div>
                                <div class="col-md-6">
                                
                                    <h6>@p.NomePizzaria</h6>
                                </div>
                            </div>
                        </div>
                        <a class="card-text">Loclização: @p.logradouro, @p.bairro, @p.numero, @p.CEP </a>
                        <a class="card-text">
                            <img src="~/img/Localizar.png" class="imgcard2">
                            <!--TODO API de localizaçao-->
                            <a>4.4Km</a>
                        </a>
                        <br>
                        <br>
                      <!-- foreach (var produtos in ViewBag.produtos)-->
                      
                            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <!--TODO foreach produto-->
                                        <img class="w-75" src="~/img/Pizzas/4Queijos.png">
                                    </div>
                                </div>
                            </div>
                       
                            <br>
                            <div class="card-footer">
                                <a href="/Cardapio/CardapioCliente/@p.Id" class="btn btn-outline-warning">Ir Cardápio</a>
                            </div>
                        </div>
                </div>
            </div>

        }
        <!-- Termina os exemplos -->
    </div>
</div>
