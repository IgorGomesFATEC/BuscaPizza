@using BuscaPizza.Models
@{
    ViewBag.Title = "dashBoard";
    Layout = "~/Views/LayoutPage.cshtml";
    Pizzaria pizzaria = (Pizzaria)Session["pizzaria"];
}
<header>
    <nav class="navbar navbar-expand-md barra">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/BuscaPizza/Home">
                        <img src="~/img/Home.png" class="botao">
                    </a>
                </li>
            </ul>
        </div>
        <div class="mx-auto order-0">
            <p class="navbar-brand mx-auto titulo">Busca Pizza</p>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <p class="nav-link"></p>
                </li>
                <li class="nav-item">
                    <h6>Olá Administrador, @pizzaria.NomePizzaria</h6>
                </li>
            </ul>
        </div>
    </nav>
</header>
<br>
<h3 align="center">Dashboard</h3>
<br />
<div class="container">
    <div class="center">
        <a class="btn btn-outline-dark" href="/Pizzaria/minhaPizzaria/@pizzaria.Id">Minha Pizzaria</a>
        <a class="btn btn-outline-dark" href="/Cardapio/cadCardapio/@pizzaria.Id">Criar Cardápio</a>
        <br /> <br />
        <a class="btn btn-outline-dark" href="/Pizzaria/readPedidos/@pizzaria.Id">Fila de Pedidos </a>
        <a class="btn btn-outline-dark" href="/Pizzaria/historico/@pizzaria.Id">Historico de Pedido </a>

    </div>
</div>
<br /><br /><br /><br /><br /><br />
<div align="center">
    <div class="col col-md-9">
        <div class="row">
            <div class="col col-md-5">
                <h4>Status do dia:</h4>
                Visitas<span class="pull-right strong">- 15%</span>
                <div class="progress">
                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100" style="width:15%">15%</div>
                </div>

                20 Novos Usuários<span class="pull-right strong">+ 30%</span>
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width:30%">30%</div>
                </div>

                359 Acessos<span class="pull-right strong">+ 8%</span>
                <div class="progress">
                    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="8" aria-valuemin="0" aria-valuemax="100" style="width:8%">8%</div>
                </div>
            </div>
            <div class="col col-md-5">
                <h4>Status do mês:</h4>
                Visitas<span class="pull-right strong">+ 45%</span>
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width:45%">45%</div>
                </div>

                395 Novos Usuários<span class="pull-right strong">+ 57%</span>
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="57" aria-valuemin="0" aria-valuemax="100" style="width:57%">57%</div>
                </div>

                12.593 Acessos<span class="pull-right strong">+ 25%</span>
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width:25%">25%</div>
                </div>
            </div>
        </div>
    </div>
</div>
