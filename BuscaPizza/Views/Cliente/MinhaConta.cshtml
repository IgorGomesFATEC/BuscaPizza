@model  BuscaPizza.Models.Cliente
@using BuscaPizza.Models
@{
    Layout = "~/Views/LayoutPage.cshtml";
    ViewBag.Title = "Minha Conta";
    Cliente cliente = (Cliente)Session["cliente"];
}

<header>
    <nav class="navbar navbar-expand-md barra">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Pizzaria/Menu">
                        <img src="~/img/Voltar.png" class="botao">
                    </a>
                </li>
            </ul>
        </div>
        <div class="mx-auto order-0">
            <p class="navbar-brand mx-auto titulo">Busca Pizza</p>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <p class="nav-link"></p>
                </li>
                <li class="nav-item">
                    <h6>Olá @cliente.nome</h6>
                </li>
            </ul>
        </div>
    </nav>
</header>
<div align="center">
    <h3>Minha conta</h3>
    <h6>Todos os detalhes da sua conta</h6>
</div>
<div class="container">
    <div align="center">

        @if (ViewBag.erro != null)
        {
            <div class="alert alert-danger">
                Erro, contate o administrador.
            </div>
        }
        <div class="col-md-8">
            <form action="/Cliente/MinhaConta" method="post">
                <div class="form-group">
                    <input type="hidden" name="Id" value="@cliente.id" />
                    <h6>Nome de Usuário</h6>
                    <input type="text" name="Nome" class="form-control new-input" value="@ViewBag.Cliente.nome">
                </div>
                <div class="form-group">
                    <h6>Email</h6>
                    <input type="email" name="Email" class="form-control new-input" id="exampleInputEmail1" aria-describedby="emailHelp" value="@ViewBag.cliente.email">
                </div>
                <div class="form-group">
                    <h6>Senha</h6>
                    <input type="password" name="Senha" class="form-control new-input" value="@ViewBag.Cliente.senha">
                </div>
                <div class="form-group">
                    <h6>Telefone</h6>
                    <input type="text" name="Telefone" class="form-control new-input" value="@ViewBag.Cliente.telefone">
                </div>
                <br>
                <a class="btn btn-outline-danger btn-md" href="/Cliente/deleteCliente/@cliente.id">Deletar conta</a>
                <br>    <!-- Apontar para a página meuEndereco -->
                <br />
                <a class="btn btn-outline-dark btn-md" href="/Cliente/meuEndereco/@cliente.id">Meus Endereços</a>
                <br />
                <br>
                <button class="btn btn-outline-success btn-md">Salvar alterações</button>
            </form>
        </div>
    </div>
</div>